@model MeetUp.ViewModels.MeetActivityViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.meetActivity.Name</h1>

<div>
    <h4>@Model.meetActivity.Time</h4>
    <hr />
    <dl class="row">
        @if (Model.meetActivity.Picture != null){
            <img src='@Url.Action("Show", "image", new { activityId = Model.meetActivity.Id })'/>
        }
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.meetActivity.Description)
        </dd>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.meetActivity.Capacity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayFor(model => model.meetActivity.Location.City)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.meetActivity.Category)
        </dd>
        <h2>Members</h2>
        @foreach (var item in @Model.members)
        {
            <dd class="col-sm-10">
                @item.Email
            </dd>
        }
        @if (@Model.canJoin)
        {
            <dd>
                <form action="@Url.Action("Create", "userActivities", new { activityId = Model.meetActivity.Id })" method="post">
                    <button type="submit">Join</button>
                </form>
            </dd>
        }
    </dl>
    
</div>
<div>
    @if (@Model.canEdit)
    {
        <a asp-action="Edit" asp-route-id="@Model?.meetActivity.Id">Edit</a>
    }
    <a asp-action="Index">Back to List</a>
</div>
